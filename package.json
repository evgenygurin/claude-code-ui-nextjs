  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.2",
    "tailwindcss": "^3.4.15",
