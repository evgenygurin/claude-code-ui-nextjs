# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/claude-code-ui"

# AI Providers
CLAUDE_API_KEY=
ANTHROPIC_API_KEY=
CURSOR_API_KEY=
OPENAI_API_KEY=

# Vercel (for deployment)
VERCEL_TOKEN=
VERCEL_PROJECT_ID=
VERCEL_ORG_ID=

# v0 Integration
V0_API_KEY=

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_TASKMASTER=false

# Security
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.ts,.jsx,.tsx,.py,.md,.json,.yaml,.yml,.toml,.env

# Terminal Settings
TERMINAL_ROWS=24
TERMINAL_COLS=80
TERMINAL_SCROLLBACK=1000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: TaskMaster AI Integration
TASKMASTER_API_URL=http://localhost:8000
TASKMASTER_API_KEY=

# Optional: MCP Server Configuration
MCP_SERVER_URL=
MCP_SERVER_TOKEN=

# Optional: Git Integration
GITHUB_TOKEN=
GITLAB_TOKEN=
BITBUCKET_TOKEN=

# Optional: Cloud Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Optional: Monitoring
SENTRY_DSN=
ANALYTICS_ID=

# Optional: Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com